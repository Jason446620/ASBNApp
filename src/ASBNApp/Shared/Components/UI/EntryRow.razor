@* 
UI bit that represents a single entry, supposed to be used in MainViewWeek.
Created 20.10.2023
*@

<div class="row mb-3">

    
    <div class="col-2 entry-row entry-row-date">
        <p class="m-0">Monday</p>
        <input type="date" id="date" @bind="SelectedDate"/>
    </div>

    <div class="col mx-4 entry-row entry-row-note">
        <div class="form-group">
            <textarea class="form-control" rows="2" id="notes" placeholder="I did learn something... Forget what though."></textarea>
        </div>
    </div>

    <div class="col-2 entry-row entry-row-location align-items-center">
        <div class="select-location-dropdown">
            <select name="work-location" id="work-location">
                <option value="" disabled selected>Select location </option>

                @foreach (var entry in WorkLocationHours.DemoWorkLocationData) {
                    <option value="@entry.Location"> @entry.Location</option>
                }
            </select>
        </div>
    </div>

</div>



@code {

    private DateTime SelectedDate = DateTime.Now;
    
}