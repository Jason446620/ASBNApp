@* Component to switch between the daily & weekly view. *@

<div class="row align-items-center">
    <p class="col m-0">Choose view:</p>

    <div class="col d-flex wrapper-selector-pill">
        <div class="view-selector @IsDay" @onclick="SwitchView" tabindex="0">
            <p class="m-1 px-2">Day</p>
        </div>
        <div class="view-selector @IsWeek" @onclick="SwitchView" tabindex="0">
            <p class="m-1 px-2">Week</p>
        </div>
    </div>
    
</div>




@code {
    // seems kinda ugly, maybe reduce to one bool?
    public bool IsDay { get; set; } = true;
    private bool IsWeek { get; set; } = false;

    private void SwitchView() {
        if (IsDay) {
            IsDay = false;
            IsWeek = true;
        } else {
            IsDay = true;
            IsWeek = false;
        }
    }
}