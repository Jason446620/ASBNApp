@*
Dismissible alert, displayed on top of the UI

param AlertType: String, see bootstrap buttons for more info
*@


<div class="fixed-dismissible-alert-container justify-content-center">
    <div class="alert alert-@AlertType alert-dismissible fixed-dismissible-alert m-0">
        <div> @AlertMessage </div>
        <button type="button" class="btn-close" aria-label="Close" @onclick="DismissAlert"></button>
    </div>
</div>

@code {
    [Parameter]
    public string? AlertType { get; set; }
    [Parameter]
    public string? AlertMessage { get; set; }

    // Callback function
    [Parameter]
    public Func<Task> OnCallback { get; set; }

    // Close the open alert
    public async void DismissAlert() {
        await OnCallback.Invoke();
    }
}

