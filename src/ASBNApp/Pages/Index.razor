@page "/"

<PageTitle>Start</PageTitle>

<div class="container-fluid">

    @* Main header & view switcher *@
    <div class="row justify-content-between align-items-center">
        <div class="col-md-auto">
            <HeaderLarge Header="Let's see what you've been up to!" />
        </div>
        <div class="col-md-auto">
            @* Two way binding, this works by binding the bool from the component to the bool here. If IsDayBool changes, so does IsDay in the SwitchDayWeek.razor file. *@
            <SwitchDayWeek @bind-IsDay="IsDayBool" />
        </div>
    </div>
   
    @if (IsDayBool) {
        <MainViewDay />
    } else {
        <MainViewWeek />
    }

</div>


@code {
    private bool IsDayBool = true;
}